---
interface Project {
  name: string
  description: string
  url: string
  github?: string
  npm?: string
  tech: string[]
  type: 'web' | 'npm' | 'mobile' | 'other'
}

const projects: Project[] = [
  {
    name: '@laiyon/n8n-nodes-wasapi',
    description: 'Paquete n8n no oficial para integrar con Wasapi (WhatsApp API)',
    url: 'https://github.com/juanalvarezpro/n8n-nodes-wasapi',
    github: 'https://github.com/juanalvarezpro/n8n-nodes-wasapi',
    npm: 'https://www.npmjs.com/package/@laiyon/n8n-nodes-wasapi',
    tech: ['TypeScript', 'N8N', 'Node.js', 'Wasapi'],
    type: 'npm'
  },
  {
    name: '@laiyon/wasapi-sdk',
    description: 'Paquete npm no oficial para integración con Wasapi (WhatsApp API)',
    url: 'https://www.npmjs.com/package/@laiyon/wasapi-sdk',
    npm: 'https://www.npmjs.com/package/@laiyon/wasapi-sdk',
    github: 'https://github.com/juanalvarezpro/wasapi-sdk',
    tech: ['TypeScript', 'Node.js', 'Wasapi'],
    type: 'npm'
  },
  {
    name: 'Bigbot',
    description: 'Plataforma Robotica y libreria infantil con control remoto',
    url: 'https://bigbot.bigtronica.tech/',
    github: 'https://github.com/BigtronicaSAS/BigBot',
    tech: ['C++', 'Arduino', 'Bluetooth', 'ESP32'],
    type: 'web'
  },
  {
    name: 'Churchsaas',
    description: 'Plataforma de gestion de iglesias y ministerios en Panama',
    url: 'https://github.com/juanalvarezPro/ipul-saas',
    github: 'https://github.com/juanalvarezPro/ipul-saas',
    tech: ['Laravel', 'Filament', 'PostgreSQL'],
    type: 'web'
  }
]
---

<div class="w-full mt-2">
  <div class="grid gap-6 md:grid-cols-2">
    {projects.map((project) => (
      <div class="p-6 rounded-lg border border-accent/10 bg-background/50 hover:border-accent/20 transition-all duration-200 hover:shadow-lg group">
        <div class="flex items-start justify-between mb-3">
          <h3 class="text-lg font-semibold text-foreground group-hover:text-accent transition-colors">
            {project.name}
          </h3>
          <div class="flex gap-2">
            {project.npm && (
              <a 
                href={project.npm} 
                target="_blank" 
                rel="noopener noreferrer"
                class="p-1.5 rounded-md bg-red-500 hover:bg-red-600 text-white transition-colors duration-200"
                title="Ver en npm"
              >
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M1.763 0C.786 0 0 .786 0 1.763v20.474C0 23.214.786 24 1.763 24h20.474c.977 0 1.763-.786 1.763-1.763V1.763C24 .786 23.214 0 22.237 0H1.763zm.944 2.17h19.586v19.66H2.707V2.17zm1.45 1.45v16.76h16.686V3.62H4.157zm1.45 1.45h13.786v13.86H5.607V5.07zm1.45 1.45v10.96h10.886V6.52H7.057zm1.45 1.45h7.986v8.06H8.507V7.97zm1.45 1.45v5.16h5.086V9.42H9.957zm1.45 1.45h2.186v2.26H11.407v-2.26z"/>
                </svg>
              </a>
            )}
            {project.github && (
              <a 
                href={project.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="p-1.5 rounded-md bg-gray-800 hover:bg-gray-900 text-white transition-colors duration-200"
                title="Ver código"
              >
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
        
        <p class="text-foreground/70 text-sm mb-4 leading-relaxed">
          {project.description}
        </p>
        
        <div class="flex flex-wrap gap-2 mb-4">
          {project.tech.map((tech) => (
            <span class="px-2 py-1 text-xs font-medium bg-accent/10 text-accent rounded-md">{tech}</span>
          ))}
        </div>
        
        <div class="flex gap-3">
          <a 
            href={project.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-accent hover:text-accent/80 border border-accent/20 hover:border-accent/40 rounded-md transition-colors duration-200"
          >
            Ver proyecto
          </a>
          {project.type === 'npm' && project.npm && (
            <a 
              href={project.npm} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-red-500 hover:text-red-600 border border-red-500/20 hover:border-red-500/40 rounded-md transition-colors duration-200"
            >
              npm
            </a>
          )}
        </div>
      </div>
    ))}
  </div>
</div>
